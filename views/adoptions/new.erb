<h1>Register new Adoption</h1>

<section class="blacklist">
  <p>Check this list of blacklisted owners before processing a new adoption</p>
<a href="/blacklist">BLACKLISTED OWNERS</a>
</section>

<p>Register owner:</p>
<div class="form">
<form action="/owners" method="POST">
 <div class ="field-group">
  <label for="Name">Name:</label>
  <input type="text" name="name" id="Name" required>
</div>
<div class="field-group">
  <label for="Contact">Contact Number:</label>
  <input type="text" name="contact" id="Contact" required>
</div>
<div class="field-group">
  <label for="cleared">Has owner passed security clearance: </label>
  <select name="cleared" id="cleared">
    <option value="t">True</option>
    <option value="f">False</option></select>
  </div>
</div>
  <input class="btn btn--adoption" type="submit" value="Add Owner">

</form>
</div>

<p>Allocate animal to new owner:</p>

<div class="form">
<form action="/adopted" method="post">
  <label>
  Select a animal:
    <select name="animal_id">
      <% @animals.each do |animal| %>
      <option value="<%= animal.id %>"><%= animal.name %></option>
      <% end %>
    </select>
  </label>
  <label>
    Select owner:
    <select name="owner_id">
      <% @owner.each do |owner| %>
      <option value="<%= owner.id %>"><%= owner.name %></option>
      <% end %>
    </select>

  </label>

    <input class="btn btn--adoption" type="submit" value="Register new Adoption">
</form>
</div>
