<h1>All Animals In Shelter</h1>

<div class ="wrapper">
<a class="btn btn--new" href="/animals/new">Add New Animal</a>
</div>

<table>
  <tr>
    <th>Picture</th>
    <th></th>
    <th>Name</th>
    <th></th>
    <th>Type</th>
    <th></th>
    <th>Breed</th>
    <th></th>
    <th>Arrival Date</th>
    <th></th>
    <th>Available to Adopt</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @animals.each do |animal|%>
  <tr>
    <td><img class= "img" src="<%= animal.picture %>"> </td>
    <td></td>
    <td><%= animal.name %></td>
    <td></td>
    <td><%= animal.type %></td>
    <td></td>
    <td><%= animal.breed %></td>
    <td></td>
    <td><%= animal.arrival_date %></td>
    <td></td>
    <td><%= animal.status %></td>
    <td></td>
    <td><a class="btn btn--edit" href="/animals/<%= animal.id %>">Edit Details</a></td>
    <td></td>
    <td><form  action="/animals/<%= animal.id %>/delete" method="post">
      <input class="btn btn--remove" type="submit" value="Remove"></td>
  </tr>

  <% end %>

</table>
