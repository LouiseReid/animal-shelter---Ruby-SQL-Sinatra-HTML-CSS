<section class="search">
  <form action="/animals/find" method="GET">
    <label class="search-label"for="search">Search By Type:</label>
    <input class="search-input"type="search" name="type" id="search">
  </form>
</section>


<h1>All Animals In Shelter</h1>

<div class ="wrapper">
<a class="btn btn--new" href="/animals/new">Add New Animal</a>
</div>

<table>
  <tr>
    <th>Picture</th>
    <th></th>
    <th>Name</th>
    <th></th>
    <th>Type</th>
    <th></th>
    <th>Breed</th>
    <th></th>
    <th>Arrival Date</th>
    <th></th>
    <th>Available to Adopt</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @animals.each do |animal|%>
  <tr>
    <td><a href="/animals/<%= animal.id %>/info"><img class= "img" src="<%= animal.picture %>"></a> </td>
    <td></td>
    <td class="cell-text"><%= animal.name %></td>
    <td></td>
    <td class="cell-text"><%= animal.type %></td>
    <td></td>
    <td class="cell-text"><%= animal.breed %></td>
    <td></td>
    <td class="cell-text"><%= animal.arrival_date %></td>
    <td></td>
    <td class="cell-text"><%= animal.status %></td>
    <td></td>
    <td class="cell-text"><a class="btn btn--edit" href="/animals/<%= animal.id %>">Edit Details</a></td>
    <td></td>
    <td>
      <form class="cell-text" action="/animals/<%= animal.id %>/delete" method="post">
        <input class="btn btn--remove" type="submit" value="Remove">
      </form>
    </td>
  </tr>

  <% end %>

</table>
